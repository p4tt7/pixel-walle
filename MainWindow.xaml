<Window x:Class="pixel_walle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pixel_walle"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="540" 
        Width="960" 
        Background="White"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid Margin="10,0,0,-16">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Canvas Margin="10,0,0,56" 
                HorizontalAlignment="Left" 
                Width="913">

            <Rectangle Canvas.Left="430"
                Canvas.Top="54" 
                Fill="LightGray"
                       Width="402"
                       Height="400" HorizontalAlignment="Center" VerticalAlignment="Center"
            ></Rectangle>

            <UniformGrid x:Name="PixelGrid" 
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Center"/>

            <TextBox  x:Name="miTextBox"
                     Width="306" 
                     Height="323" 
                     Canvas.Top="54" 
                     Text="Code here..." 
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     VerticalContentAlignment="Top" 
                     FontSize="16"               
                     BorderBrush="Black"
                     BorderThickness="3"
                     Padding="10,10,0,0"
                     Foreground="Black" 
                     HorizontalAlignment="Left" 
                     AcceptsReturn="True" 
                     VerticalAlignment="Center" TextChanged="TextBox_TextChanged" Canvas.Left="37"/>

            <Rectangle x:Name="MyRectangle"
                Width="306"
                Height="26"
                Fill="Black" 
                Canvas.Top="28" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Center" Canvas.Left="37"
             />


            <Button Content="CLEAR"
                Width="140"
                Height="30"
                FontSize="10"
                FontWeight="Bold"
                Background="White"
                Foreground="Black"
                    Click="ClearButton_Click"
                    BorderBrush="Black"
                    BorderThickness="3"
                Cursor="Hand"
                Canvas.Top="424"
                RenderTransformOrigin="-5.137,1.145" Canvas.Left="203" HorizontalAlignment="Left" VerticalAlignment="Center"/>


            <Button Content="SAVE"
                Width="85"
                Height="23"
                FontSize="9"
                FontWeight="Bold"
                Click="SaveButton_Click"
                Background="White"
                Foreground="Black"
                BorderBrush="Black"
                BorderThickness="2"
                Cursor="Hand"
                RenderTransformOrigin="-5.137,1.145" Canvas.Left="530" HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.Top="28"/>

            <Button Content="ERRORS"
                Width="140"
                Height="30"
                Click="ErrorsButton_Click"
                FontSize="10"
                FontWeight="Bold"
                Background="White"
                Foreground="Black"
                BorderBrush="Black"
                BorderThickness="3"
                Cursor="Hand"
                Canvas.Top="424"
                RenderTransformOrigin="-5.137,1.145" Canvas.Left="37" HorizontalAlignment="Left" VerticalAlignment="Center"/>

            <Button Content="RUN!"
                Width="306"
                Height="37"
                FontSize="20"
                FontWeight="Bold"
                Click="RunButton_Click"
                Background="LightGray"
                Foreground="Black"
                BorderBrush="Black"
                BorderThickness="3"
                Cursor="Hand"
                Canvas.Top="380"
                RenderTransformOrigin="-5.137,1.145" Canvas.Left="37" HorizontalAlignment="Left" VerticalAlignment="Center"/>


            <Button Content="REDIMENSION"
                Width="85"
                Height="23"
                FontSize="9"
                FontWeight="Bold"
                Background="White"
                Foreground="Black"
                BorderBrush="Black"
                BorderThickness="2"
                Click="RedimensionButton_Click"
                Cursor="Hand"
                Canvas.Top="28"
                RenderTransformOrigin="-5.137,1.145" Canvas.Left="631" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Canvas>
    </Grid>
</Window>