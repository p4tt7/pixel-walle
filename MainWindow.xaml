<Window x:Class="pixel_walle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pixel_walle"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="768" 
        Width="1366" 
        Background="White"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Grid Margin="10,0,0,-16">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Canvas Margin="10,0,0,123" 
                HorizontalAlignment="Left" 
                Width="1254">

            <Rectangle Canvas.Left="480"
                Canvas.Top="77" 
                Fill="LightGray"
                       Width="653"
                       Height="527" HorizontalAlignment="Left" VerticalAlignment="Center"
            ></Rectangle>

            <UniformGrid x:Name="PixelGrid"
                         Canvas.Left="191"
                         Canvas.Top="9" 
                         HorizontalAlignment="Center" 
                         VerticalAlignment="Center"/>

            <TextBox Width="258" 
                     Height="390" 
                     Canvas.Top="94" 
                     Text="Code here..." 
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     VerticalContentAlignment="Top" 
                     FontSize="16"               
                     BorderBrush="Black"
                     BorderThickness="3"
                     Padding="10,10,0,0"
                     Foreground="Black" 
                     HorizontalAlignment="Left" 
                     AcceptsReturn="True" 
                     VerticalAlignment="Center" TextChanged="TextBox_TextChanged" Canvas.Left="90"/>
            <Rectangle 
                Width="258"
                Height="34"
                Fill="Black" 
                Canvas.Top="63" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Top" Canvas.Left="90"
             />


            <Button Content="CLEAR"
                Width="123"
                Height="43"
                FontSize="10"
                FontWeight="Bold"
                Background="White"
                Foreground="Black"
                    BorderBrush="Black"
                    BorderThickness="3"
                Cursor="Hand"
                Canvas.Top="555"
                RenderTransformOrigin="-5.137,1.145" Canvas.Left="225" HorizontalAlignment="Center" VerticalAlignment="Center"/>


            <Button Content="SAVE"
                Width="100"
                Height="43"
                FontSize="10"
                FontWeight="Bold"
                Background="White"
                Foreground="Black"
                BorderBrush="Black"
                BorderThickness="3"
                Cursor="Hand"
                RenderTransformOrigin="-5.137,1.145" Canvas.Left="1132" HorizontalAlignment="Left" VerticalAlignment="Center" Canvas.Top="9"/>

            <Button Content="TERMINAL"
                Width="123"
                Height="43"
                FontSize="10"
                FontWeight="Bold"
                Background="White"
                Foreground="Black"
                BorderBrush="Black"
                BorderThickness="3"
                Cursor="Hand"
                Canvas.Top="555"
                RenderTransformOrigin="-5.137,1.145" Canvas.Left="90" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Button Content="RUN!"
                Width="258"
                Height="43"
                FontSize="20"
                FontWeight="Bold"
                Background="LightGray"
                Foreground="Black"
                BorderBrush="Black"
                BorderThickness="3"
                Cursor="Hand"
                Canvas.Top="497"
                RenderTransformOrigin="-5.137,1.145" Canvas.Left="90" HorizontalAlignment="Center" VerticalAlignment="Top"/>


            <Button Content="REDIMENSION"
                Width="99"
                Height="43"
                FontSize="10"
                FontWeight="Bold"
                Background="White"
                Foreground="Black"
                BorderBrush="Black"
                BorderThickness="3"
                Cursor="Hand"
                Canvas.Top="9"
                RenderTransformOrigin="-5.137,1.145" Canvas.Left="1034" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Canvas>
    </Grid>
</Window>