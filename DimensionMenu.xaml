<Window x:Class="pixel_walle.DimensionMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pixel_walle"
        mc:Ignorable="d"
        Title="DimensionMenu" Height="450" Width="800">
    <Grid>

        <StackPanel Margin="20">
            <TextBlock Margin="0,10,0,0"><Run Language="en-gb" Text="Rows"/><Run Text=":"/></TextBlock>
            <TextBox x:Name="RowsBox"/>

            <TextBlock Margin="0,10,0,0"><Run Language="en-gb" Text="Columns"/></TextBlock>
            <TextBox x:Name="ColsBox"/>

        </StackPanel>

        <Button Content="OK" 
        Click="Button_Click"
        FontSize="10"
        FontWeight="Bold"
       Background="Black"
        Foreground="White"
         Cursor="Hand" Margin="528,140,146,240" 
        />

    </Grid>
</Window>
