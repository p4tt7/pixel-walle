<Window x:Class="pixel_walle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pixel_walle"
        mc:Ignorable="d"
 Title="MainWindow" 
        Height="768" 
        Width="1366" 
        Background="#130b20"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">


    <Grid Margin="10,0,0,-16">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Canvas Margin="10,0,0,32" 
                HorizontalAlignment="Left" 
                Width="1346">


            <UniformGrid x:Name="PixelGrid"
             Background="White"
             Rows="20"
             Columns="20"
             Canvas.Left="67"
             Canvas.Top="27"
             Width ="632"
             Height ="593" 
             HorizontalAlignment="Center" 
             VerticalAlignment="Top"/>


            <TextBox Width="438" 
                     Height="594" 
                     Canvas.Left="726" 
                     Canvas.Top="27" 
                     Text="Code here..." 
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"
                     VerticalContentAlignment="Top" 
                     FontSize="20" 
                     BorderBrush="#a4ffc7"
                     BorderThickness="1"
                     Background="#130b20"
                     Padding="30,30,0,0"
                     Foreground="#65c5e9" 
                     HorizontalAlignment="Center" 
                     AcceptsReturn="True" 
                     VerticalAlignment="Top"/>

            <Button Content="RUN!"
                    Width="141"
                    Height="51"
                    FontSize="25"
                    FontWeight="Bold"
                    Background="#130b20"
                    Foreground="#a4ffc7"
                    BorderBrush="#a4ffc7"
                    BorderThickness="2"
                    Padding="10"
                    Cursor="Hand"
                    Canvas.Right="150"
                    Canvas.Bottom="20"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top" Canvas.Left="1001" Canvas.Top="545">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="5"/>
                    </Style>
                </Button.Resources>
            </Button>

        </Canvas>
    </Grid>


</Window>
