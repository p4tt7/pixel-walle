<Window x:Class="pixel_walle.DimensionMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pixel_walle"
        mc:Ignorable="d"
        Title="DimensionMenu" Height="540" Width="960">
    <Grid>
        <StackPanel Margin="28,27,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="282" Height="665">

            <TextBlock Margin="0,10,0,5" FontWeight="Bold">Rows:</TextBlock>
            <TextBox x:Name="RowsBox" Height="25"/>

            <TextBlock Margin="0,10,0,5" FontWeight="Bold">Columns:</TextBlock>
            <TextBox x:Name="ColsBox" Height="25"/>

            <TextBlock Margin="0,10,0,5" FontWeight="Bold">File Name:</TextBlock>
            <TextBox x:Name="FileNameBox" Height="25"/>

            <Button Content="OK" 
                    Click="Button_Click"
                    FontSize="12"
                    FontWeight="Bold"
                    Background="Black"
                    Foreground="White"
                    Cursor="Hand"
                    Margin="0,20,0,0"
                    Width="100"
                    HorizontalAlignment="Left"/>
        </StackPanel>
    </Grid>
</Window>
