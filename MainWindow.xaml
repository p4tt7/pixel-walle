<Window x:Class="pixel_walle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pixel_walle"
        mc:Ignorable="d"
 Title="MainWindow" 
        Height="768" 
        Width="1366" 
        Background="#d2bcfd"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    

    <Grid Margin="10,0,0,-16">
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Canvas Margin="10,0,0,32" HorizontalAlignment="Left" Width="1346">
            

            <UniformGrid x:Name="PixelGrid"
             Background="White"
             Rows="256"
             Columns="256"
             Canvas.Left="57"
             Canvas.Top="36"
             Width ="670"
             Height ="635" 
             HorizontalAlignment="Center" 
             VerticalAlignment="Center"/>


            <TextBox Width="464" 
                     Height="564" 
                     Canvas.Left="755" 
                     Canvas.Top="107" 
                     Text="Code here..." 
                     VerticalContentAlignment="Top" 
                     FontSize="38" 
                     Foreground="#80d2bcfd" HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <Button Content="RUN!" 
                    FontWeight="Bold"
                    Background="#ffa4dc" 
                    Foreground="White" 
                    FontSize="29" 
                    Height="54" 
                    Width="464" 
                    Canvas.Left="755"
                    Canvas.Top="617" HorizontalAlignment="Center" VerticalAlignment="Top"
             />

            <Rectangle Width="464" 
                       Height="71"
                       Fill="#ffa4dc"
                       Canvas.Left="755"
                       Canvas.Top="36" HorizontalAlignment="Left" VerticalAlignment="Center" />

        </Canvas>
    </Grid>


</Window>
